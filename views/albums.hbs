<link rel="stylesheet" href="/styles/albums.css">

<section id="albums-page">
    {{#each albumsArr}}
    <div>
        {{#each this.images}}
        {{#ifEquals this.width 640}}
        <img src="{{this.url}}">
        {{/ifEquals}}
        {{/each}}

        <p>{{this.name}}</p>
        <a href="/tracks/{{this.id}}">Enjoy some tracks from {{this.name}} (if at least it is related to Dragonball, else click on "Home" and try again.)</a>
    </div>

    {{/each}}
</section>